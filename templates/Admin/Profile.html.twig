{% extends "@EasyAdmin/page/content.html.twig" %}
{% block page_title %}
    Profile
{% endblock %}

{% block content_title %}Profile{% endblock %}
{% block page_actions %}

{% endblock %}

{% block main %}
    <div class="container rounded bg-white mt-5 mb-5">
        {% for message in app.flashes('success') %}
            <div class="col-xs4">
                <div class="alert alert-success">{{ message }}</div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="col-xs4">
                <div class="alert alert-danger">{{ message }}</div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <br>
                    <span class="font-weight-bold">{{ app.user.name }}</span>
                    <br>
                    <span class="text-black-50">{{app.user.email}}</span><span>
                    </span></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-left">Profile Settings</h4>
                        <br>
                    </div>
                    {{ form_start(form) }}
                    <div class="row mt-2">
                        <div class="col-md-6"><label for="form.name">Name:</label> {{ form_widget(form.Name) }}</div>
                        <div class="col-md-6">  <label for="form.lastname">LastName:</label>{{ form_widget(form.Lastname) }}</div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label for="form.email">Email:</label>{{ form_widget(form.email) }}</div>
                        <div class="col-md-12"><label for="form.phoneNumber">PhoneNumber:</label>{{ form_widget(form.phoneNumber) }}</div>
                    </div>
                    <br><br>
                    <div class="mt-5 text-center">{{ form_widget(form.EditProfile) }} {{ form_end(form) }} <a class="btn btn-success" style="margin-left: 50px" href="{{ path('Edit_Admin_Password') }}">Update Password</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

